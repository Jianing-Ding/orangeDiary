      <text class="text-xl text-bold text-green">{{date}} {{date.month}}</text>
      <text class="bg-green"></text>
      <!-- last-child选择器-->
    </view>
  </view> 
<!--日历-->
<calendar calendar-style="calendar" binddayClick="dayClick" />
